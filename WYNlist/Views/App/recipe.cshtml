@model IEnumerable<Recipe>
@{
    ViewBag.Title = "Recipes";
}

<!-- modal placeholder -->
<div id="myModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent">
            </div>
        </div>
    </div>
</div>
<!-- end modal placeholder -->


<h1>Recipes</h1>
<p>Count: @Model.Count()</p>
@foreach (var p in Model)
{

    <div class="col-md-3">
        <div class="well well-sm">
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Details", "RecipeDetails", new { id = p.Id}, new { data_modal = "" })</li>
                    <li>@Html.ActionLink("Edit", "RecipeEdit", new { id = p.Id}, new { data_modal = "" })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = p.Id}, new { data_modal = "" })</li>
                </ul>
            </div>
            <div>@p.RecipeName</div>
        </div>
    </div>
}